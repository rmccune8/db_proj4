<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>Job Loader</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    { 
                         @if (db_proj4.Models.JobsRepository.GetType(User.Identity.Name).Equals("Recruiter"))
                         {
                             <li>@Html.ActionLink("Profile", "Pro", "Recruiters")</li> 
                         }
                         else
                         {
                             <li>@Html.ActionLink("Profile", "Pro", "Applicants")</li>
                         }
                        <li>@Html.ActionLink("Jobs", "Index", "Jobs")</li> 
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </div>
        </div>
        
                 <div id="main">
                @RenderBody()
            </div>
        
        <div id="footer">
        </div>
    </div>
</body>
</html>