@model db_proj4.Models.entities.Applicants

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
     
        @Html.HiddenFor(model => model.Userid)

        <div class="editor-label">
            @Html.LabelFor(model => model.Fname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Fname)
         </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Lname)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Lname)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.School)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.School)           
        </div>
    
       <div class="editor-label">
            @Html.LabelFor(model => model.Aemail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Aemail)           
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Degree)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.Degree, new[] { 
                new SelectListItem() {Text = "None", Value = "None"}, 
                new SelectListItem() {Text = "B.S.", Value = "B.S."},
                new SelectListItem() {Text = "M.S.", Value = "M.S."},
                new SelectListItem() {Text = "PH.D", Value = "PH.D"},
            }, "Choose your account type:")
           </div>
         <div class="editor-label">
            @Html.LabelFor(model => model.DegreeField)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DegreeField)
           </div>
        <p>
            <input type="submit" value="Save" />
        </p>
  
}

